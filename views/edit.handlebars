<div class="container mt-5">
  <div class="edit-form py-5 mt-5 col-7 mx-auto">
    <form action="/restaurants/{{{restaurant.id}}}/edit?_method=PUT" method="POST">
      <!-- Form Name -->
      <h1 class="text-center pb-5">修改<span class="text-info">{{{restaurant.name}}}</span>餐廳資料</h1>
      <table class="mx-5">
        <tbody>
          <tr>
            <td>餐廳中文名稱:</td>
            <td width="400"><input type="text" class="form-control" name="name" id="name" value="{{{restaurant.name}}}"
                required></td>
          </tr>

          <tr>
            <td>餐廳英文名稱:</td>
            <td width="400"><input type="text" class="form-control" name="name_en" id="name_en"
                value="{{{restaurant.name_en}}}" required></td>
          </tr>

          <tr>
            <td>餐廳類別:</td>
            <td width="400"><input type="text" class="form-control" name="category" id="category"
                value="{{{restaurant.category}}}" required></td>
          </tr>

          <tr>
            <td>餐廳圖片:</td>
            <td><input type="text" class="form-control" name="image" id="image" placeholder="http://"
                value="{{{restaurant.image}}}" pattern="(http|https):\/\/([\w.]+\/?)\S*" required></td>
          </tr>

          <tr>
            <td>餐廳地址:</td>
            <td width="400"><input type="text" class="form-control" name="location" id="location"
                value="{{{restaurant.location}}}" required></td>
          </tr>


          <tr>
            <td>餐廳電話:</td>
            <td width="400"><input type="text" class="form-control" name="phone" id="phone" maxlength="12"
                placeholder="02 0000 0000" value="{{{restaurant.phone}}}" pattern="[0-9]{2}\s[0-9]{,4}\s[0-9]{4}"
                required></td>
          </tr>

          <tr>
            <td>Google Map:</td>
            <td width="400"><input type="text" class="form-control" name="google_map" id="google_map"
                placeholder="https://goo.gl/maps/" value="{{{restaurant.google_map}}}"
                pattern="(http|https):\/\/([\w.]+\/?)\S*" required></td>
          </tr>

          <tr>
            <td>餐廳評分:</td>
            <td width="400"><input type="number" step="0.1" min="1" max="5" class="form-control" name="rating"
                id="rating" value="{{{restaurant.rating}}}" placeholder="1~5分" required></td>
          </tr>

          <tr>
            <td>餐廳簡介:</td>
            <td width="400"><textarea class="form-control" name="description" rows="7"
                required>{{restaurant.description}}</textarea>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="pt-4 text-center">
        <button type="submit" class="btn btn-success mr-3">Save</button>
        <a href="/" class="btn btn-secondary">取消</a>
      </div>
    </form>
  </div>
</div>