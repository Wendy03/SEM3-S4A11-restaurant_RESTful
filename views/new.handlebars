<div class="container mt-5">
  <div class="new-form py-5 mt-5 col-7 mx-auto">
    <form action="/restaurants" method="POST">
      <!-- Form Name -->
      <h1 class="text-center pb-5">新增餐廳</h1>
      <table class="mx-5">
        <tbody>
          <tr>
            <td>餐廳中文名稱:</td>
            <td width="400"><input type="text" class="form-control" name="name" id="name" required>
            </td>
          </tr>

          <tr>
            <td>餐廳英文名稱:</td>
            <td width="400"><input type="text" class="form-control" name="name_en" id="name_en" required></td>
          </tr>

          <tr>
            <td>餐廳類別:</td>
            <td width="400"><input type="text" class="form-control" name="category" id="category" required>
            </td>
          </tr>

          <tr>
            <td>餐廳圖片:</td>
            <td width="400"><input type="text" class="form-control" name="image" id="image" placeholder="http://"
                pattern="(http|https):\/\/([\w.]+\/?)\S*" required>
            </td>
          </tr>

          <tr>
            <td>餐廳地址:</td>
            <td width="400"><input type="text" class="form-control" name="location" id="location" required>
            </td>
          </tr>


          <tr>
            <td>餐廳電話:</td>
            <td width="400"><input type="text" class="form-control" name="phone" id="phone" maxlength="12"
                placeholder="02 000 0000" pattern="[0-9]{2}\s[0-9]{,4}\s[0-9]{4}" required>
            </td>
          </tr>

          <tr>
            <td>Google Map:</td>
            <td width="400"><input type="text" class="form-control" name="google_map" id="google_map"
                placeholder="https://goo.gl/maps/" pattern="(http|https):\/\/([\w.]+\/?)\S*" required></td>
          </tr>

          <tr>
            <td>餐廳評分:</td>
            <td width="400"><input type="number" step="0.1" min="1" max="5" class="form-control" name="rating"
                id="rating" placeholder="1~5分" required>
            </td>
          </tr>

          <tr>
            <td>餐廳簡介:</td>
            <td width="400"><textarea class="form-control" name="description" rows="7" required></textarea>
            </td>
          </tr>
        </tbody>
      </table>

      <div class="pt-4 text-center">
        <button type="submit" class="btn btn-primary mr-2">確認新增</button>
        <a href="/" class="btn btn btn-secondary">取消</a>
      </div>
    </form>
  </div>
</div>